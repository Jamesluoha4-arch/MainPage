import SwiftUI

struct PlayPage: View {
    @Binding var isPresented: Bool
    @State private var selectedTab: SoundTab = .whiteNoise
    @State private var dragOffset: CGFloat = 0 // 内部下拉位移
    
    var body: some View {
        ZStack {
            Color.black.ignoresSafeArea()
            
            VStack(spacing: 0) {
                // 指示条
                Capsule().fill(Color.white.opacity(0.3)).frame(width: 40, height: 5).padding(.top, 10)
                
                // 顶部标题
                VStack(spacing: 8) {
                    Text(selectedTab.rawValue).font(.system(size: 28, weight: .bold)).foregroundColor(.white)
                    Text("夜间好梦").font(.system(size: 14)).foregroundColor(.gray)
                }
                .padding(.top, 30)
                .overlay(alignment: .trailing) {
                    Image(systemName: "info.circle.fill").font(.system(size: 22)).foregroundColor(.white.opacity(0.2)).padding(.trailing, 25)
                }
                
                Spacer() // 动效预留位
                
                // 底部交互区
                VStack(spacing: 35) {
                    HStack(spacing: 15) {
                        ForEach(SoundTab.allCases, id: \.self) { tab in
                            Button(action: { withAnimation(.spring()) { selectedTab = tab } }) {
                                Text(tab.rawValue)
                                    .font(.system(size: 15, weight: selectedTab == tab ? .bold : .medium))
                                    .foregroundColor(selectedTab == tab ? .white : .white.opacity(0.4))
                                    .frame(maxWidth: .infinity).frame(height: 64)
                                    .glassStyle(opacity: selectedTab == tab ? 0.74 : 0.15, cornerRadius: 18, showBorder: selectedTab == tab)
                            }
                        }
                    }.padding(.horizontal, 20)
                    
                    HStack(spacing: 40) {
                        ControlIcon(icon: "pause.fill", isMain: true)
                        ControlIcon(icon: "arrow.clockwise")
                        ControlIcon(icon: "timer")
                        ControlIcon(icon: "airplayaudio")
                    }
                    
                    Button(action: {}) {
                        Text("发现").font(.system(size: 16, weight: .medium)).foregroundColor(.white)
                            .frame(maxWidth: .infinity).frame(height: 70)
                            .glassStyle(opacity: 0.4, cornerRadius: 35)
                    }.padding(.horizontal, 20).padding(.bottom, 40)
                }
            }
            .offset(y: dragOffset)
        }
        .clipShape(RoundedRectangle(cornerRadius: dragOffset > 0 ? 40 : 0))
        .gesture(
            DragGesture()
                .onChanged { value in
                    if value.translation.height > 0 { dragOffset = value.translation.height }
                }
                .onEnded { value in
                    if value.translation.height > 150 {
                        withAnimation(.spring()) {
                            isPresented = false
                            dragOffset = 0
                        }
                    } else {
                        withAnimation(.spring()) { dragOffset = 0 }
                    }
                }
        )
    }
}

struct ControlIcon: View {
    var icon: String
    var isMain: Bool = false
    var body: some View {
        Image(systemName: icon).font(.system(size: isMain ? 24 : 18)).foregroundColor(.white)
            .frame(width: 55, height: 55).background(Circle().fill(Color.white.opacity(0.12)))
    }
}
