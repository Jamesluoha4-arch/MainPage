import SwiftUI
import Combine

// MARK: - 1. 功能枚举
enum ActiveOverlay: Identifiable {
    case feedback, soundEdit, focus, mix, routine
    var id: Int { hashValue }
}

// MARK: - 2. 动效组件
struct RippleCircle: View {
    @State private var scale: CGFloat = 0.2
    @State private var opacity: Double = 0.8
    var delay: Double
    var isAnimating: Bool
    var resetID: UUID
    
    var body: some View {
        Circle()
            .stroke(LinearGradient(gradient: Gradient(colors: [Color.white.opacity(0.8), Color.white.opacity(0.0)]), startPoint: .topLeading, endPoint: .bottomTrailing), lineWidth: 2)
            .scaleEffect(isAnimating ? scale : 0.2)
            .opacity(isAnimating ? opacity : 0.0)
            .id(resetID)
            .onAppear { if isAnimating { startAnimation() } }
    }
    
    private func startAnimation() {
        scale = 0.2
        opacity = 0.8
        withAnimation(Animation.easeOut(duration: 3.0).delay(delay).repeatForever(autoreverses: false)) {
            scale = 1.6
            opacity = 0.0
        }
    }
}

struct RhythmGeometryView: View {
    var isPlaying: Bool
    @State private var beat: Bool = false
    
    var body: some View {
        ZStack {
            Canvas { context, size in
                let step: CGFloat = 30
                for x in stride(from: 0, through: size.width, by: step) {
                    context.stroke(Path { p in p.move(to: CGPoint(x: x, y: 0)); p.addLine(to: CGPoint(x: x, y: size.height)) }, with: .color(Color.white.opacity(0.1)), lineWidth: 0.5)
                }
                for y in stride(from: 0, through: size.height, by: step) {
                    context.stroke(Path { p in p.move(to: CGPoint(x: 0, y: y)); p.addLine(to: CGPoint(x: size.width, y: y)) }, with: .color(Color.white.opacity(0.1)), lineWidth: 0.5)
                }
            }
            .frame(width: 300, height: 300)
            
            ForEach(0..<3) { i in
                RoundedRectangle(cornerRadius: beat ? 40 : 10)
                    .stroke(Color.white.opacity(0.8 - Double(i) * 0.2), lineWidth: 2)
                    .frame(width: 80 + CGFloat(i * 40), height: 80 + CGFloat(i * 40))
                    .scaleEffect(beat ? 1.1 : 0.9)
                    .rotationEffect(.degrees(beat ? 90 : 0))
            }
        }
        .onAppear { updateAnimation() }
        .onChange(of: isPlaying) { _ in updateAnimation() }
    }
    
    private func updateAnimation() {
        if isPlaying {
            withAnimation(.interpolatingSpring(stiffness: 120, damping: 10).repeatForever(autoreverses: true)) { beat = true }
        } else {
            withAnimation(.spring()) { beat = false }
        }
    }
}

// MARK: - 3. 主页面
struct PlayPage: View {
    @Binding var isPresented: Bool
    @State private var selectedTab: Int = 0
    @State private var isPlaying: Bool = true
    @State private var showInfoOverlay: Bool = false
    @State private var activeOverlay: ActiveOverlay? = nil
    @State private var innerDragOffset: CGFloat = 0
    @State private var animationResetID = UUID()
    
    // 状态
    @State private var isInterceptOn: Bool = false
    @State private var mixAudioEnabled: Bool = true

    var body: some View {
        ZStack(alignment: .bottom) {
            Color(hex: "050505").ignoresSafeArea()
            
            VStack(spacing: 0) {
                // Header
                ZStack(alignment: .trailing) {
                    Capsule().fill(Color.white.opacity(0.3)).frame(width: 40, height: 5).frame(maxWidth: .infinity)
                    Button(action: { withAnimation { showInfoOverlay = true } }) {
                        Image(systemName: "info.circle").font(.system(size: 22)).foregroundColor(.white)
                    }.padding(.trailing, 25)
                }.padding(.top, 12)
                
                // Title Area
                VStack(spacing: 8) {
                    Text(selectedTab == 0 ? "白噪音" : (selectedTab == 1 ? "自然之声" : "节奏"))
                        .font(.system(size: 28, weight: .bold)).foregroundColor(.white)
                    Text(selectedTab == 2 ? "工作时间集中注意力" : "夜间好梦")
                        .font(.system(size: 14)).foregroundColor(.gray)
                }.padding(.top, 30)
                
                Spacer()
                
                // 中央动画
                ZStack {
                    if selectedTab == 2 {
                        RhythmGeometryView(isPlaying: isPlaying)
                    } else {
                        if isPlaying {
                            ForEach(0..<3) { i in
                                RippleCircle(delay: Double(i) * 1.0, isAnimating: isPlaying, resetID: animationResetID)
                            }
                        }
                        // 移除了中间的图片，仅保留动效
                    }
                }
                .id(animationResetID)
                .frame(width: 300, height: 300)
                
                Spacer()
                
                // 底部面板
                VStack(spacing: 24) {
                    HStack(spacing: 12) {
                        TabButton(title: "白噪音", isSelected: selectedTab == 0) { selectedTab = 0 }
                        TabButton(title: "自然音", isSelected: selectedTab == 1) { selectedTab = 1 }
                        TabButton(title: "节奏", isSelected: selectedTab == 2) { selectedTab = 2 }
                    }.padding(.horizontal, 20)
                    
                    ScrollView(.horizontal, showsIndicators: false) {
                        HStack(spacing: 12) {
                            CapsuleToolButton(icon: "bubble.left", title: "反馈") { withAnimation { activeOverlay = .feedback } }
                            CapsuleToolButton(icon: "sparkles", title: "声音编辑") { withAnimation { activeOverlay = .soundEdit } }
                            CapsuleToolButton(icon: "timer.circle", title: "注意力") { withAnimation { activeOverlay = .focus } }
                            CapsuleToolButton(icon: "hand.raised", title: "拦截", isOn: isInterceptOn) { isInterceptOn.toggle() }
                            CapsuleToolButton(icon: "waveform.path", title: "混合") { withAnimation { activeOverlay = .mix } }
                        }.padding(.horizontal, 20)
                    }
                    
                    HStack(spacing: 30) {
                        ControlIconGlass(icon: "arrow.clockwise") { animationResetID = UUID() }
                        ControlIconGlass(icon: isPlaying ? "pause.fill" : "play.fill", isMain: true) { isPlaying.toggle() }
                        ControlIconGlass(icon: "timer") { withAnimation { activeOverlay = .focus } }
                        ControlIconGlass(icon: "airplayaudio") { withAnimation { activeOverlay = .mix } }
                    }.padding(.bottom, 30)
                }
            }
            .blur(radius: (activeOverlay != nil || showInfoOverlay) ? 15 : 0)
            
            // Overlays
            if activeOverlay != nil {
                Color.black.opacity(0.6).ignoresSafeArea().onTapGesture { withAnimation { activeOverlay = nil } }
                overlayContent
                    .transition(.move(edge: .bottom))
                    .zIndex(10)
            }
            
            if showInfoOverlay {
                InfoOverlayView(selectedTab: selectedTab, onClose: { withAnimation { showInfoOverlay = false } })
                    .transition(.move(edge: .bottom))
                    .zIndex(100)
            }
        }
    }
    
    @ViewBuilder
    private var overlayContent: some View {
        switch activeOverlay {
        case .focus: FocusOverlayView(onClose: { withAnimation { activeOverlay = nil } })
        case .mix: mixView
        default: Color.clear // 简化处理
        }
    }
    
    private var mixView: some View {
        VStack(alignment: .leading, spacing: 20) {
            Text("混合音频").font(.headline).foregroundColor(.white)
            Toggle("允许其他 App 声音", isOn: $mixAudioEnabled).foregroundColor(.white)
            Button("完成") { withAnimation { activeOverlay = nil } }
                .frame(maxWidth: .infinity).padding().background(Color.white.opacity(0.2)).cornerRadius(15).foregroundColor(.white)
        }
        .padding(25).background(Color.black).clipShape(RoundedCorner(radius: 30, corners: [.topLeft, .topRight]))
    }
}

// MARK: - 4. 注意力集中遮罩 (Focus Overlay)
struct FocusOverlayView: View {
    var onClose: () -> Void
    @State private var focusTask: String = ""
    @State private var workDuration = 25
    @State private var breakDuration = 5
    @State private var rounds = 1
    
    var body: some View {
        ZStack {
            Color.black.ignoresSafeArea()
            
            VStack(spacing: 25) {
                // Header
                HStack {
                    Text("注意力集中").font(.system(size: 24, weight: .bold)).foregroundColor(.white)
                    Spacer()
                    Button("完成") { onClose() }.foregroundColor(.gray)
                }.padding(.top, 20)
                
                // Input
                TextField("", text: $focusTask, prompt: Text("做了什么").foregroundColor(.gray))
                    .padding()
                    .background(Color.white.opacity(0.1))
                    .cornerRadius(12)
                    .foregroundColor(.white)
                
                // Time Pickers
                HStack(spacing: 15) {
                    timePickerBlock(title: "工作时长", value: $workDuration)
                    timePickerBlock(title: "短暂休息", value: $breakDuration)
                }
                
                Spacer()
                
                // Round Selector
                VStack(spacing: 12) {
                    HStack {
                        Button(action: { if rounds > 1 { rounds -= 1 } }) {
                            Image(systemName: "minus.circle.fill")
                                .font(.system(size: 24))
                                .foregroundColor(rounds > 1 ? .white : .white.opacity(0.2))
                        }
                        Spacer()
                        Text("回合：\(rounds)").font(.system(size: 18, weight: .medium)).foregroundColor(.white)
                        Spacer()
                        Button(action: { rounds += 1 }) {
                            Image(systemName: "plus.circle.fill")
                                .font(.system(size: 24))
                                .foregroundColor(.white)
                        }
                    }
                    .padding()
                    .frame(height: 60)
                    .background(Color.white.opacity(0.1))
                    .cornerRadius(16)
                    
                    // Start Button
                    Button(action: { onClose() }) {
                        Text("开始")
                            .font(.system(size: 18, weight: .bold))
                            .foregroundColor(.black)
                            .frame(maxWidth: .infinity)
                            .frame(height: 60)
                            .background(Color.white)
                            .cornerRadius(16)
                    }
                }
                .padding(.bottom, 40)
            }
            .padding(.horizontal, 25)
        }
    }
    
    private func timePickerBlock(title: String, value: Binding<Int>) -> some View {
        VStack(alignment: .leading, spacing: 10) {
            Text(title).font(.system(size: 14)).foregroundColor(.gray)
            HStack {
                Picker("", selection: value) {
                    ForEach(1...60, id: \.self) { Text("\($0) min").tag($0) }
                }
                .pickerStyle(.wheel)
                .colorInvert()
                .colorMultiply(.white)
                .frame(height: 100)
                .clipped()
            }
            .background(Color.white.opacity(0.05))
            .cornerRadius(12)
        }
    }
}

// MARK: - 5. 信息详情页 (Info Overlay)
struct InfoOverlayView: View {
    var selectedTab: Int
    var onClose: () -> Void
    
    var body: some View {
        ZStack(alignment: .bottom) {
            Color.black.ignoresSafeArea()
            
            ScrollView(.vertical, showsIndicators: false) {
                VStack(spacing: 0) {
                    VStack(spacing: 8) {
                        Text(selectedTab == 2 ? "节奏" : "白噪音").font(.system(size: 28, weight: .bold)).foregroundColor(.white)
                        Text(selectedTab == 2 ? "工作时间集中注意力" : "夜间好梦").font(.system(size: 16)).foregroundColor(.gray)
                    }.padding(.top, 60)
                    
                    // 动态图片
                    Image(systemName: selectedTab == 2 ? "briefcase.fill" : "waveform")
                        .resizable().aspectRatio(contentMode: .fit)
                        .frame(width: 150, height: 150).foregroundColor(.white).padding(.vertical, 40)
                    
                    Text(selectedTab == 2 ? "节奏变化，快速进入状态" : "利用声音的力量改善睡眠").font(.system(size: 18)).foregroundColor(.white).padding(.bottom, 30)
                    
                    VStack(alignment: .leading, spacing: 25) {
                        Divider().background(Color.gray.opacity(0.3))
                        Text(selectedTab == 2 ? "节奏" : "白噪音").font(.system(size: 14)).foregroundColor(.gray)
                        Text(selectedTab == 2 ? "通过规律性的音频振荡和频率控制，帮助大脑锁定在高效工作波段，减少环境干扰。" : "白噪音通过覆盖环境中的突发噪音，营造平稳和谐的听觉背景。")
                            .font(.system(size: 22, weight: .medium)).foregroundColor(.white).lineSpacing(8)
                    }.padding(.horizontal, 30)
                    
                    Spacer(minLength: 220)
                }
            }
            .mask(LinearGradient(gradient: Gradient(stops: [.init(color: .clear, location: 0), .init(color: .black, location: 0.1), .init(color: .black, location: 0.85), .init(color: .clear, location: 1)]), startPoint: .top, endPoint: .bottom))
            
            Button(action: onClose) {
                Text("开始").font(.system(size: 18, weight: .bold)).foregroundColor(.black)
                    .frame(maxWidth: .infinity).frame(height: 56).background(Color.white).cornerRadius(16)
            }.padding(.horizontal, 25).padding(.bottom, 40).background(Color.black)
            
            // Close Button
            VStack {
                HStack {
                    Spacer()
                    Button(action: onClose) {
                        Image(systemName: "xmark").font(.system(size: 20, weight: .bold)).foregroundColor(.white)
                            .padding(12).background(Color.white.opacity(0.1)).clipShape(Circle())
                    }.padding([.trailing, .top], 25)
                }
                Spacer()
            }
        }
    }
}

// MARK: - 子组件库
struct TabButton: View {
    var title: String; var isSelected: Bool; var action: () -> Void
    var body: some View {
        Button(action: action) {
            Text(title).font(.system(size: 14, weight: isSelected ? .bold : .medium))
                .foregroundColor(isSelected ? .white : .white.opacity(0.4))
                .frame(maxWidth: .infinity).frame(height: 50)
                .background(isSelected ? Color.white.opacity(0.15) : Color.clear).cornerRadius(15)
        }
    }
}

struct CapsuleToolButton: View {
    var icon: String; var title: String; var isOn: Bool = false; var action: () -> Void
    var body: some View {
        Button(action: action) {
            HStack(spacing: 8) {
                Image(systemName: icon).font(.system(size: 14))
                Text(title).font(.system(size: 13, weight: .medium))
            }
            .foregroundColor(isOn ? .white : .white.opacity(0.7))
            .padding(.horizontal, 16).frame(height: 42)
            .background(isOn ? Color.white.opacity(0.2) : Color.white.opacity(0.05))
            .overlay(Capsule().stroke(Color.white.opacity(0.1), lineWidth: 1))
            .clipShape(Capsule())
        }
    }
}

struct ControlIconGlass: View {
    var icon: String; var isMain: Bool = false; var action: () -> Void
    var body: some View {
        Button(action: action) {
            ZStack {
                Circle().fill(Color.white.opacity(0.1))
                Image(systemName: icon).font(.system(size: isMain ? 24 : 18, weight: .bold)).foregroundColor(.white)
            }.frame(width: isMain ? 70 : 55, height: isMain ? 70 : 55)
        }
    }
}

struct RoundedRectangleWithCorners: Shape {
    var radius: CGFloat; var corners: UIRectCorner
    func path(in rect: CGRect) -> Path {
        let path = UIBezierPath(roundedRect: rect, byRoundingCorners: corners, cornerRadii: CGSize(width: radius, height: radius))
        return Path(path.cgPath)
    }
}
更改这一段属于节奏的信息icon遮罩为信息icon点击后的遮罩内容改变，标题改为”节奏“，小标题为”工作时间集中注意力“，下方图片变成带有工作元素的图片，文字变成”节奏变化，快速进入状态“，分割线保留，下方灰色标题变为节奏，下方文字变为节奏的含义，其余元素保留。同时修改在工具栏中，闹钟按钮变成”注意力“按钮，点击后遮罩内容改变，新的遮罩内容为标题为”注意力集中“，下方是一个输入框，中间灰色字体”做了什么“。下方是一个时间选择，区别于现有时间UI bar，这个是选择两项内容，分别是”工作时长“以及”短暂休息"。底部分为两个长方形区域纵向排列，首先是回合选择器，区域左侧为减少icon，右侧为增加icon。中间内容为“回合：”后面跟着数字，数字受加减icon影响，用户点击增加icon数字增加，点击减少icon，数字减少。当数字为1时，减少icon变暗，代表不能继续减少。下方区域为白色按钮，内容为“开始”。点击区域可以回到播放界面。遮罩右上角有文字“完成”点击可以回到播放界面。其他元素保留，播放界面中间的图片可以删除。并给我完整代码
