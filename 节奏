import SwiftUI
import Combine

// MARK: - 1. 节奏页专用 UI 组件 (已重命名以避免冲突)

struct RhythmTabButton: View {
    let title: String
    let isSelected: Bool
    let action: () -> Void
    var body: some View {
        Button(action: action) {
            Text(title)
                .font(.system(size: 16, weight: isSelected ? .bold : .medium))
                .foregroundColor(isSelected ? .white : .gray)
                .padding(.horizontal, 16)
                .padding(.vertical, 8)
                .background(isSelected ? Color.white.opacity(0.15) : Color.clear)
                .cornerRadius(20)
        }
    }
}

struct RhythmCapsuleToolButton: View {
    let icon: String
    let title: String
    var isOn: Bool = false
    let action: () -> Void
    var body: some View {
        Button(action: action) {
            HStack(spacing: 6) {
                Image(systemName: icon)
                Text(title)
            }
            .font(.system(size: 14, weight: .medium))
            .foregroundColor(.white)
            .padding(.horizontal, 16)
            .frame(height: 42)
            .background(isOn ? Color.blue.opacity(0.8) : Color.white.opacity(0.1))
            .cornerRadius(21)
        }
    }
}

struct RhythmControlIconGlass: View {
    let icon: String
    var isMain: Bool = false
    var body: some View {
        Image(systemName: icon)
            .font(.system(size: isMain ? 28 : 20, weight: .semibold))
            .foregroundColor(.white)
            .frame(width: isMain ? 80 : 56, height: isMain ? 80 : 56)
            .background(Color.white.opacity(0.1))
            .clipShape(Circle())
            .overlay(Circle().stroke(Color.white.opacity(0.1), lineWidth: 1))
    }
}

struct RhythmSquareIconButton: View {
    let icon: String
    var body: some View {
        VStack {
            Image(systemName: icon)
                .font(.system(size: 30))
                .foregroundColor(.white)
        }
        .frame(width: 80, height: 80)
        .background(Color.white.opacity(0.1))
        .cornerRadius(20)
    }
}

// MARK: - 2. 节奏动力学组件
struct RhythmBar: View {
    @State private var height: CGFloat = CGFloat.random(in: 20...60)
    var isPlaying: Bool
    var body: some View {
        RoundedRectangle(cornerRadius: 4)
            .fill(LinearGradient(colors: [.white, .white.opacity(0.3)], startPoint: .top, endPoint: .bottom))
            .frame(width: 12, height: isPlaying ? height : 15)
            .onAppear { if isPlaying { startAnimation() } }
            .onChange(of: isPlaying) { if $0 { startAnimation() } }
    }
    private func startAnimation() {
        withAnimation(Animation.easeInOut(duration: Double.random(in: 0.3...0.6)).repeatForever(autoreverses: true)) {
            height = CGFloat.random(in: 40...180)
        }
    }
}

// MARK: - 3. 主页面
struct RhythmPlayPage: View {
    @Binding var isPresented: Bool
    
    // 状态管理
    @State private var selectedTab: Int = 2
    @State private var isPlaying: Bool = true
    @State private var innerDragOffset: CGFloat = 0
    @State private var activeOverlay: ActiveOverlay? = nil
    @State private var showInfoOverlay: Bool = false
    
    // 核心逻辑变量
    @State private var countdownSeconds: Int = 0
    @State private var isTimerActive: Bool = false
    @State private var animationResetID = UUID()
    @State private var isApplyingSound: Bool = false
    @State private var showSuccessIcon: Bool = false
    @State private var mixAudioEnabled: Bool = true
    
    // 注意力集中参数
    @State private var focusTask: String = ""
    @State private var workDuration: Int = 25
    @State private var breakDuration: Int = 5
    @State private var rounds: Int = 1
    
    let timer = Timer.publish(every: 1, on: .main, in: .common).autoconnect()

    var body: some View {
        ZStack {
            Color(hex: "050505").ignoresSafeArea()
            
            // 背景网格
            GeometryReader { geo in
                Path { path in
                    for x in stride(from: 0, through: geo.size.width, by: 35) {
                        path.move(to: CGPoint(x: x, y: 0)); path.addLine(to: CGPoint(x: x, y: geo.size.height))
                    }
                    for y in stride(from: 0, through: geo.size.height, by: 35) {
                        path.move(to: CGPoint(x: 0, y: y)); path.addLine(to: CGPoint(x: geo.size.width, y: y))
                    }
                }.stroke(Color.white.opacity(0.05), lineWidth: 1)
            }.ignoresSafeArea()

            VStack(spacing: 0) {
                // Header
                ZStack(alignment: .trailing) {
                    Capsule().fill(Color.white.opacity(0.3)).frame(width: 40, height: 5).frame(maxWidth: .infinity)
                    Button(action: { withAnimation { showInfoOverlay = true } }) {
                        Image(systemName: "info.circle").font(.title3).foregroundColor(.white)
                    }.padding(.trailing, 25)
                }.padding(.top, 12)

                VStack(spacing: 8) {
                    Text("节奏").font(.system(size: 28, weight: .bold)).foregroundColor(.white)
                    Text("工作时间集中注意力").font(.system(size: 14)).foregroundColor(.gray)
                }.padding(.top, 30)

                Spacer()
                
                // 中央动画
                HStack(spacing: 12) {
                    ForEach(0..<10, id: \.self) { _ in RhythmBar(isPlaying: isPlaying) }
                }.id(animationResetID)
                
                Spacer()

                // 底部面板
                VStack(spacing: 24) {
                    HStack(spacing: 12) {
                        RhythmTabButton(title: "白噪音", isSelected: selectedTab == 0) { selectedTab = 0 }
                        RhythmTabButton(title: "自然音", isSelected: selectedTab == 1) { selectedTab = 1 }
                        RhythmTabButton(title: "节奏", isSelected: selectedTab == 2) { selectedTab = 2 }
                    }

                    ScrollView(.horizontal, showsIndicators: false) {
                        HStack(spacing: 12) {
                            if countdownSeconds > 0 {
                                Button(action: { isTimerActive.toggle() }) {
                                    HStack { Image(systemName: isTimerActive ? "stopwatch" : "pause.fill"); Text(formatTime(countdownSeconds)) }
                                    .font(.system(size: 13, weight: .bold)).foregroundColor(.white).padding(.horizontal, 16).frame(height: 42).background(Color.blue).cornerRadius(21)
                                }
                            }
                            RhythmCapsuleToolButton(icon: "brain.head.profile", title: "注意力") { withAnimation { activeOverlay = .alarm } }
                            RhythmCapsuleToolButton(icon: "bubble.left", title: "反馈") { withAnimation { activeOverlay = .feedback } }
                            RhythmCapsuleToolButton(icon: "sparkles", title: "声音编辑") { withAnimation { activeOverlay = .soundEdit } }
                        }.padding(.horizontal, 20)
                    }

                    HStack(spacing: 30) {
                        Button(action: resetPlaybackAction) { RhythmControlIconGlass(icon: "arrow.clockwise") }
                        Button(action: { isPlaying.toggle() }) { RhythmControlIconGlass(icon: isPlaying ? "pause.fill" : "play.fill", isMain: true) }
                        Button(action: { withAnimation { activeOverlay = .alarm } }) { RhythmControlIconGlass(icon: "timer") }
                        Button(action: { withAnimation { activeOverlay = .mix } }) { RhythmControlIconGlass(icon: "airplayaudio") }
                    }.padding(.bottom, 30)
                }
            }
            .blur(radius: (activeOverlay != nil || showInfoOverlay) ? 15 : 0)
            .offset(y: innerDragOffset)

            // 弹出遮罩逻辑
            if let overlay = activeOverlay {
                Color.black.opacity(0.5).ignoresSafeArea().onTapGesture { withAnimation { activeOverlay = nil } }
                overlayContent(for: overlay).transition(.move(edge: .bottom)).zIndex(10)
            }
            
            if isApplyingSound { soundLoadingOverlay.zIndex(20) }
            
            if showInfoOverlay { rhythmInfoOverlayView.transition(.move(edge: .bottom)).zIndex(30) }
        }
        .onReceive(timer) { _ in updateCountdown() }
        .gesture(DragGesture().onChanged { v in if v.translation.height > 0 { innerDragOffset = v.translation.height } }
            .onEnded { v in if v.translation.height > 150 { isPresented = false }; withAnimation { innerDragOffset = 0 } })
    }

    // MARK: - 4. 逻辑处理函数
    
    private func resetPlaybackAction() {
        isPlaying = true
        withAnimation {
            animationResetID = UUID()
            countdownSeconds = 0
            isTimerActive = false
        }
    }

    private func startCountdown() {
        countdownSeconds = workDuration * 60
        isTimerActive = true
    }
    
    private func updateCountdown() {
        if isTimerActive && countdownSeconds > 0 {
            countdownSeconds -= 1
            if countdownSeconds == 0 { isPlaying = false; isTimerActive = false }
        }
    }
    
    private func formatTime(_ s: Int) -> String {
        String(format: "%02d:%02d:%02d", s / 3600, (s % 3600) / 60, s % 60)
    }

    private func startApplySoundAnimation() {
        activeOverlay = nil
        withAnimation { isApplyingSound = true }
        DispatchQueue.main.asyncAfter(deadline: .now() + 2) {
            showSuccessIcon = true
            DispatchQueue.main.asyncAfter(deadline: .now() + 1.2) {
                withAnimation { isApplyingSound = false; showSuccessIcon = false }
            }
        }
    }

    private var soundLoadingOverlay: some View {
        ZStack {
            Color.black.opacity(0.8).ignoresSafeArea()
            VStack(spacing: 20) {
                if showSuccessIcon { Image(systemName: "checkmark").font(.system(size: 40, weight: .bold)).foregroundColor(.white) }
                else { ProgressView().progressViewStyle(CircularProgressViewStyle(tint: .white)).scaleEffect(2) }
            }.frame(width: 150, height: 150).background(Color.white.opacity(0.1)).cornerRadius(24)
        }
    }

    // MARK: - 5. 遮罩详细内容
    @ViewBuilder
    private func overlayContent(for item: ActiveOverlay) -> some View {
        switch item {
        case .alarm: focusOverlayView
        case .feedback: feedbackView
        case .soundEdit: soundEditView
        case .mix: mixView
        case .routine: EmptyView()
        }
    }

    private var focusOverlayView: some View {
        VStack(spacing: 25) {
            Text("注意力集中").font(.title2.bold()).foregroundColor(.white).padding(.top, 30)
            TextField("", text: $focusTask, prompt: Text("任务描述...").foregroundColor(.gray))
                .padding().background(Color.white.opacity(0.1)).cornerRadius(12).padding(.horizontal, 25).foregroundColor(.white)
            
            HStack {
                VStack { Text("专注").font(.caption); Stepper("\(workDuration)m", value: $workDuration, in: 1...120) }
                Spacer()
                VStack { Text("回合").font(.caption); Stepper("\(rounds)", value: $rounds, in: 1...10) }
            }.padding(.horizontal, 40).foregroundColor(.white).colorInvert()
            
            Button(action: { startCountdown(); withAnimation { activeOverlay = nil } }) {
                Text("开始专注").font(.headline).foregroundColor(.black).frame(maxWidth: .infinity).frame(height: 55).background(Color.white).cornerRadius(15)
            }.padding(.horizontal, 25).padding(.bottom, 40)
        }.background(Color.black).clipShape(RoundedCorner(radius: 30, corners: [.topLeft, .topRight]))
    }

    private var soundEditView: some View {
        VStack(spacing: 20) {
            Text("声音编辑").font(.headline).foregroundColor(.white).padding(.top, 20)
            TextField("", text: .constant(""), prompt: Text("描述节奏...").foregroundColor(.gray))
                .padding().background(Color.white.opacity(0.1)).cornerRadius(12).padding(.horizontal, 20)
            Button("应用") { startApplySoundAnimation() }.frame(maxWidth: .infinity).frame(height: 50).background(Color.white).foregroundColor(.black).cornerRadius(12).padding(.horizontal, 20)
            Button("取消") { withAnimation { activeOverlay = nil } }.foregroundColor(.gray).padding(.bottom, 20)
        }.background(Color.black).clipShape(RoundedCorner(radius: 30, corners: [.topLeft, .topRight]))
    }
    
    private var feedbackView: some View {
        VStack(spacing: 30) {
            Text("声音反馈").foregroundColor(.white).padding(.top, 20)
            HStack(spacing: 30) { RhythmSquareIconButton(icon: "face.smiling"); RhythmSquareIconButton(icon: "face.dashed") }
            Button("关闭") { withAnimation { activeOverlay = nil } }.foregroundColor(.gray).padding(.bottom, 30)
        }.frame(maxWidth: .infinity).background(Color.black).clipShape(RoundedCorner(radius: 30, corners: [.topLeft, .topRight]))
    }

    private var mixView: some View {
        VStack(spacing: 20) {
            Toggle("混合音频", isOn: $mixAudioEnabled).padding().foregroundColor(.white)
            Button("完成") { withAnimation { activeOverlay = nil } }.frame(height: 50).frame(maxWidth: .infinity).background(Color.white.opacity(0.1)).cornerRadius(25).padding()
        }.background(Color.black).frame(height: 200)
    }

    private var rhythmInfoOverlayView: some View {
        ZStack {
            Color.black.ignoresSafeArea()
            VStack {
                HStack { Spacer(); Button(action: { withAnimation { showInfoOverlay = false } }) { Image(systemName: "xmark").foregroundColor(.white).padding() } }
                Spacer()
                Image(systemName: "briefcase.fill").font(.system(size: 80)).foregroundColor(.white).padding()
                Text("节奏专注").font(.title.bold()).foregroundColor(.white)
                Text("稳定的节奏有助于进入心流状态").foregroundColor(.gray).padding()
                Spacer()
                Button("开始") { withAnimation { showInfoOverlay = false } }.frame(maxWidth: .infinity).frame(height: 56).background(Color.white).foregroundColor(.black).cornerRadius(16).padding(30)
            }
        }
    }
}
